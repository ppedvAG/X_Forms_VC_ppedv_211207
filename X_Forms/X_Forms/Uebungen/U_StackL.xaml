<?xml version="1.0" encoding="utf-8" ?>
<!--Vgl. Layouts/StackLayoutBsp.xaml-->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X_Forms.Uebungen.U_StackL"
             BackgroundColor="#127AC7"
             Title="StackÜbung">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#1DABF0"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style TargetType="Label" x:Key="Lbl_Sty_Header">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
    </ContentPage.Resources>

    <StackLayout VerticalOptions="CenterAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
        <Label Text="Welcome to Xamarin"
               HorizontalOptions="Center"
               Style="{StaticResource Lbl_Sty_Header}"/>
        <Label Text="Cross-plattform Apps made easy"
               TextColor="White"
               HorizontalOptions="Center"/>
        <Button Text="Login"/>
        <Button Text="Register"/>
    </StackLayout>

</ContentPage>