<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X_Forms.Layouts.RelativeLayoutBsp">
    <ContentPage.Content>
        <RelativeLayout>

            <BoxView Color="Green"
                     x:Name="Bxv_Green"
                     RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.5, Constant=-10}"
                     RelativeLayout.YConstraint="{ConstraintExpression Type=Constant, Constant=50}"
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.6}"/>
            
            <BoxView Color="Blue"
                     RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName=Bxv_Green, Property=Width, Factor=0.5}"
                     RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=Bxv_Green, Property=Height, Factor=1.2}"/>

        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>